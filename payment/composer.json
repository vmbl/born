{
    "name": "adyen/payment",
    "description": "Official Magento Plugin to connect to Payment Service Provider Adyen'.",
    "type": "magento-module",
    "homepage": "https://github.com/adyenpayments/magento",
    "license": "OSL-3.0",
    "authors": [
        {
            "name": "Adyen",
            "email": "support@adyen.com"
        }
    ],
    "require": {
        "magento-hackathon/magento-composer-installer": "2.*"
    },
    "extra":{
	"map":[
		["app/etc/modules/Adyen_Payment.xml", "app/etc/modules/Adyen_Payment.xml"],
		["app/code/community/Adyen/Payment/", "app/code/community/Adyen/Payment/"],
		["skin/frontend/base/default/.*", "skin/frontend/base/default/.*"]
	]
    },
    "replace": {
        "connect20/madia_adyen": "1.*"
    }
}
